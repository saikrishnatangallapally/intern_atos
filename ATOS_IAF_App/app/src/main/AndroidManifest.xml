<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sb.atos_iaf_app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.sb.atos_iaf_app.LogoStartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sb.atos_iaf_app.LoginScreen"
            android:label="@string/title_activity_second"
            android:parentActivityName="com.example.sb.atos_iaf_app.LogoStartScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sb.atos_iaf_app.LogoStartScreen" />
        </activity>
        <activity
            android:name="com.example.sb.atos_iaf_app.Homepage"
            android:label="@string/title_activity_third"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Feedback"
            android:label="@string/title_activity_feedback"
            android:parentActivityName="com.example.sb.atos_iaf_app.Homepage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sb.atos_iaf_app.Homepage" />
        </activity>
        <activity
            android:name="com.example.sb.atos_iaf_app.JobsListActivity"
            android:label="@string/title_jobs_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.example.sb.atos_iaf_app.JobsDetailActivity"
            android:label="@string/title_jobs_detail"
            android:parentActivityName="com.example.sb.atos_iaf_app.JobsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sb.atos_iaf_app.JobsListActivity" />
        </activity>
    </application>

</manifest>