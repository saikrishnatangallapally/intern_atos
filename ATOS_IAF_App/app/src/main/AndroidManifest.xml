<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sb.AtosInterviewManagementServices">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.sb.AtosInterviewManagementServices.LogoStartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sb.AtosInterviewManagementServices.LoginScreen"
            android:label="@string/title_activity_second"
            android:parentActivityName="com.example.sb.AtosInterviewManagementServices.LogoStartScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sb.AtosInterviewManagementServices.LogoStartScreen" />
        </activity>
        <activity
            android:name="com.example.sb.AtosInterviewManagementServices.Homepage"
            android:label="@string/title_activity_third"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sb.AtosInterviewManagementServices.InterviewDetails"
            android:label="@string/title_activity_interview_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sb.AtosInterviewManagementServices.FeedbackForm"
            android:label="@string/title_activity_feedback_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sb.AtosInterviewManagementServices.CompletedFeedbackForm"
            android:label="@string/title_activity_completed_feedback_form"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>