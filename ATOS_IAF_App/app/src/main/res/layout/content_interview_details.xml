<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sb.atos_iaf_app.InterviewDetails"
    tools:showIn="@layout/app_bar_interview_details"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interview Details"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Job Description:"
            android:textColor="@android:color/black"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Contact Number:"
            android:textColor="@android:color/black"
            android:id="@+id/textView15"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Candidate Name:"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidate ID:"
            android:textColor="@android:color/black"
            android:layout_marginEnd="3dp"
            app:layout_constraintRight_toLeftOf="@+id/textView3"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Details:"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule Interview:"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/radioButton10"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="10 AM"
            android:layout_marginStart="11dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/radioButton12"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/textView7" />

        <RadioButton
            android:id="@+id/radioButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="12 PM"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="52dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintRight_toRightOf="@+id/radioButton2"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/candID"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="151dp"
            app:layout_constraintLeft_toLeftOf="@+id/otherDetails" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="2 PM"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="52dp"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/radioButton12"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/otherDetails" />

    <Button
        android:id="@+id/forward"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Forward"
        android:textColor="@android:color/black"
        android:textColorLink="@color/colorPrimary"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="119dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Reject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="28dp"
        android:text="Reject"
        android:textColor="@android:color/black"
        android:textColorLink="?attr/colorPrimary"
        android:layout_marginStart="26dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/forward"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/forward" />

    <Button
        android:id="@+id/schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="16dp"
        android:text="Schedule"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/forward"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />


        <TextView
            android:id="@+id/jobDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job DB"
            android:textColor="@android:color/black"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/candName"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/candName" />

        <TextView
            android:id="@+id/contactNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact DB"
            android:textColor="@android:color/black"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/jobDes"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/jobDes" />

        <TextView
            android:id="@+id/candName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name DB"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/candID"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/candID" />

        <TextView
            android:id="@+id/candID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID DB"
            android:textColor="@android:color/black"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintRight_toLeftOf="@+id/radioButton12"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/radioButton10" />

        <TextView
            android:id="@+id/otherDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other DB"
            android:textColor="@android:color/black"
            android:layout_marginEnd="5dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/radioButton12"
            app:layout_constraintRight_toRightOf="@+id/radioButton10"
            android:layout_marginBottom="12dp" />

</android.support.constraint.ConstraintLayout>
